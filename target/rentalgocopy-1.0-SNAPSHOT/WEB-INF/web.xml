<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.mydemo.mycartt.servlet.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mydemo.mycart.servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loggin</servlet-name>
        <servlet-class>com.mydemo.mycartt.servlet.loggin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reservation</servlet-name>
        <servlet-class>com.mydemo.mycartt.servlet.reservation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loggin</servlet-name>
        <url-pattern>/loggin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservation</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:mysql://localhost:3306/carrent</param-value>
    </context-param>
    <context-param>
        <param-name>dbusername</param-name>
        <param-value>hyper</param-value>
    </context-param>
    <context-param>
        <param-name>dbpassword</param-name>
        <param-value>hyper</param-value>
    </context-param>
</web-app>
